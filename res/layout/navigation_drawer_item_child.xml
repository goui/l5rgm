<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="48dp" >

    <!-- THE DRAWER MENU ITEMS -->

    <ImageView
        android:id="@+id/navigation_drawer_item_child_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/navigation_drawer_image_content_description" />

    <TextView
        android:id="@+id/navigation_drawer_item_child_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/navigation_drawer_item_child_image_view"
        android:gravity="center_vertical"
        android:textSize="18sp" />

</RelativeLayout>